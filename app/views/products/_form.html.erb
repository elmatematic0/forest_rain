<%= form_for(@product) do |f| %>
  <ul>
  <% @product.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description%>
  </p>
  <p>
    <%= f.label :price_in_cents %><br />
    <%= f.number_field :price_in_cents %><br /> 
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>